<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name = "movie1" class="com.stackroute.domain.movie" >
        <constructor-arg ref="actor1"></constructor-arg>
    </bean>
    <bean name = "movie2" class="com.stackroute.domain.movie" >
        <constructor-arg ref="actor2"></constructor-arg>
    </bean>
    <bean id = "actor1" class="com.stackroute.domain.actor">
        <constructor-arg  name="name" value="Amitabh"/>
        <constructor-arg  name="gender" value="Male"/>
        <constructor-arg  name="age" value="70"/>
    </bean>
    <bean id ="actor2" class="com.stackroute.domain.actor">
        <constructor-arg type="java.lang.String" name="name"  value="SRK"/>
        <constructor-arg type="java.lang.String" name="gender" value="Male"/>
        <constructor-arg type="int" name="age" value="58"/>
    </bean>
    <bean id ="actor3" class="com.stackroute.domain.actor">
        <constructor-arg type="java.lang.String" name="name" value="Amir"/>
        <constructor-arg type="java.lang.String" name="gender" value="Male"/>
        <constructor-arg type="int" name="age" value="56"/>
    </bean>
</beans>
